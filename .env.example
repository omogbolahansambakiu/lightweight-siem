# OpenSearch Configuration
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=StrongPassword123!
OPENSEARCH_SCHEME=http
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_QUEUE_RAW=events:raw
REDIS_QUEUE_PARSED=events:parsed
REDIS_QUEUE_ALERTS=alerts:queue

# Detection Engine
DETECTION_WORKERS=2
DETECTION_BATCH_SIZE=100
DETECTION_POLL_INTERVAL=1
RULE_RELOAD_INTERVAL=60
ENABLE_CORRELATION=true
ENABLE_THREAT_INTEL=true
ENABLE_GEOIP=true

# Alert Manager
ALERT_WORKERS=2
ALERT_DEDUP_WINDOW=300
ALERT_THROTTLE_WINDOW=3600
ALERT_MAX_PER_HOUR=100

# Email Notifications
SMTP_ENABLED=true
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=siem@yourcompany.com
SMTP_TO_CRITICAL=security-team@yourcompany.com
SMTP_TO_HIGH=security-team@yourcompany.com
SMTP_TO_MEDIUM=security-alerts@yourcompany.com
SMTP_TO_LOW=security-digest@yourcompany.com

# Slack Notifications
SLACK_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL_CRITICAL=#security-critical
SLACK_CHANNEL_HIGH=#security-alerts
SLACK_CHANNEL_MEDIUM=#security-alerts
SLACK_CHANNEL_LOW=#security-digest

# PagerDuty Notifications
PAGERDUTY_ENABLED=false
PAGERDUTY_API_KEY=your-pagerduty-integration-key
PAGERDUTY_SERVICE_KEY=your-service-key
PAGERDUTY_SEVERITY_THRESHOLD=HIGH

# Webhook Notifications
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
WEBHOOK_AUTH_TOKEN=your-webhook-token

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_SECRET_KEY=change-this-to-a-long-random-string
API_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
API_RATE_LIMIT=100/minute
API_ENABLE_AUTH=true

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# GeoIP Configuration
GEOIP_DB_PATH=/app/config/geoip/GeoLite2-City.mmdb
GEOIP_ENABLED=true

# Threat Intelligence
THREAT_INTEL_FEEDS_PATH=/app/config/threat-intel/indicators.json
THREAT_INTEL_REFRESH_INTERVAL=3600
THREAT_INTEL_ENABLED=true

# Storage & Retention
INDEX_EVENTS=siem-events
INDEX_ALERTS=siem-alerts
INDEX_PATTERN=siem-events-*
RETENTION_DAYS_EVENTS=90
RETENTION_DAYS_ALERTS=365
INDEX_ROLLOVER_SIZE=50gb
INDEX_ROLLOVER_DAYS=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/siem/app.log

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Security
ENABLE_TLS=false
TLS_CERT_PATH=/app/security/certs/server.crt
TLS_KEY_PATH=/app/security/certs/server.key
SESSION_TIMEOUT=3600
JWT_EXPIRATION=86400

# Collectors
SYSLOG_PORT=514
SYSLOG_PROTOCOL=UDP
HTTP_COLLECTOR_PORT=9200

# Timezone
TZ=UTC

# Development
DEBUG=false
RELOAD=false
